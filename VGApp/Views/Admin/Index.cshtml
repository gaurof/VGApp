@model IEnumerable<VGAppDb.Models.Game>

<div class="admin-games-container">
    <div class="games-sidebar">
        <h3 class="games-title">Games</h3>
        <a asp-action="Create" class="create-game-button">
            Create Game
        </a>

        <div class="games-list">
            @foreach (var game in Model)
            {
                <div class="game-item">
                    <a class="game-name-link">@game.Name</a>
                    <div class="game-actions">
                        <a asp-action="Edit" asp-route-id="@game.Id" class="edit-game-button">
                            <i class="fas fa-edit"></i>
                        </a>
                        <form asp-action="Delete" asp-route-id="@game.Id" method="post" class="delete-form">
                            <button type="submit" class="delete-game-button"
                                    onclick="return confirm('Are you sure you want to delete @game.Name?')">
                                <i class="fas fa-trash"></i>
                            </button>
                        </form>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Make game names clickable
        document.querySelectorAll('.game-name-link').forEach(link => {
            link.addEventListener('click', function() {
                // Add your navigation logic here
                console.log('Navigating to game:', this.textContent);
            });
        });
    </script>
}