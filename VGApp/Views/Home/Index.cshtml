@model IEnumerable<VGAppDb.Models.Game>

<div class="home-page">
    <div class="hero-section">
        <h1>Welcome to GameVault</h1>
        <p>Discover and explore your favorite games</p>
    </div>

    <div class="featured-games">
        <h2>Featured Titles</h2>
        <div class="games-grid">
            @if (Model.Count() > 0)
            {
                @foreach (var game in Model)
                {
                    <a asp-controller="Game" asp-action="" asp-route-id="@game.Id" class="game-card">
                        <img src="@game.PosterUrl" alt="@game.Name" class="game-poster">
                        <div class="game-info">
                            <h3>@game.Name</h3>
                            <div class="game-meta">
                                <span class="year">@game.ReleaseDate.Year</span>
                                <span class="price">$@game.Price.ToString("0.00")</span>
                            </div>
                        </div>
                    </a>
                }
            }
            
        </div>
    </div>
</div>
