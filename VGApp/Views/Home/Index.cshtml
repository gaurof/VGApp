@model IEnumerable<VGAppDb.Models.Game>

<div class="games-grid">
    @foreach (var game in Model)
    {
        <div class="game-poster">
            <a asp-controller="Game" asp-action="Details" asp-route-id="@game.Id">
                <img src="@game.PosterImageUrl" alt="@game.Title poster" width="600" height="900" class="poster-image">
                <div class="game-info-overlay">
                    <h3>@game.Title</h3>
                    @if (game.ReleaseYear.HasValue)
                    {
                        <span class="release-year">(@game.ReleaseYear)</span>
                    }
                </div>
            </a>
        </div>
    }
</div>